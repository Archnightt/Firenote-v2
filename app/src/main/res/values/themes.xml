<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Notepad" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- MAIN COLOR ACCENT -->
        <item name="colorPrimary">@color/lightorange</item>

        <!-- BACKGROUND COLOR-->
        <item name="colorPrimaryVariant">@color/darkgrey</item>

        <!-- MAIN FONT COLOR-->
        <item name="colorOnPrimary">@color/darkgrey</item>

        <!-- FONT COLOR -->
        <item name="colorOnBackground">@color/iosblack</item>

        <!-- CONTRAST FONT COLOR-->
        <item name="colorSecondary">@color/lightorange</item>

        <!-- BACKGROUND NOTES-->
        <item name="colorSecondaryVariant">@color/ioswhiteBG</item>

        <!-- STATUS BAR -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- BUTTON COLOR -->
        <item name ="colorButtonNormal">@color/dark</item>

        <item name = "colorOnTertiary">@color/offwhite</item>
        <item name = "colorOnPrimaryContainer">@color/lightstroke</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>